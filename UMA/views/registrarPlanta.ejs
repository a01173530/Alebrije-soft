<%- include('includes/header.ejs') %>
<%- include('includes/navbar.ejs') %>

<div class="row">
    <div class="col-2"  id="contentside">
      <div class="sidebar">
       <a href="registrarPersonal.html">Registrar Personal</a>
       <a href="registrarZona.html">Registrar Zona</a>
       <a href="registrarEspecie.html">Registrar Especie</a>
       
    </div>
    </div>
    <div class="col-10">
        <br>

        <h1 class="text-center">Registrar Planta</h1>
        <div class="col-11">
        <div class="container">
        <br>
        <br>
        <div class="row">
            <div class="col justify-content-center">
                <form action="agregar" method="POST">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>" >
                    <div class="form-row">
                        <div class="form-group col-md-4">
                            <fieldset disabled>
                                <label for="disabledTextInput">Inventario Origen</label>
                                <input type="text" id="disabledTextInput" class="form-control" placeholder="Semillas">
                            </fieldset>
                        </div>
                        <div class="form-group col-md-4">
                            <label for="inputState">Inventario destino</label>
                            <select id="inputState" class="form-control" name="etapa">
                                <option value="LP" selected> Lote de Plantulas</option>
                                <option value="LS">Lote de Semillas</option>
                                <option value="MP">Plantas Madre</option>
                                <option value="P">Plantas</option>
                            </select>
                        </div>
                        <div class="form-group col-md-4">
                            <label for="inputState">Razón de traslado</label>
                            <select id="inputState" class="form-control" name="razon">
                                <option selected value="1">Venta</option>
                                <option value="2">Traslado a plántulas</option>
                                <option value="3">Traslado a plantas</option>
                                <option value="4">Traslado de plantas madres</option>
                                <option value="5">Donación recibida </option>
                                <option value="6">Donación enviada</option>
                                <option value="7">Compra</option>
                                <option value="8">Colecta</option>
                                <option value="9">Muerte</option>
                                <option value="10">Robo</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-4">
                            <fieldset disabled>
                                <label for="disabledTextInput">Fecha de traslado</label>
                                <input type="text" id="disabledTextInput" class="form-control" placeholder="20/08/2020">
                            </fieldset>
                        </div>
                        <div class="form-group col-md-4">
                            <label for="inputState">Nombre científico</label>
                            <select id="inputState" class="form-control" name="especie">
                                <%for(let especie of especies) {%>
                                    <option value="<%= especie.EspID %>"><%= especie.NombreEsp %></option>
                                <%}%>
                            </select>
                        </div>
                        <div class="form-group col-md-4">
                            <label for="disabledTextInput">Cantidad a registrar</label>
                            <input type="number" id="disabledTextInput" class="form-control" name="cantidad"
                                placeholder="Introduce un numero">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-4">
                            <fieldset disabled>
                                <label for="disabledTextInput">Zona de origen</label>
                                <input type="text" id="disabledTextInput" class="form-control" placeholder="Inventario">
                            </fieldset>
                        </div>
                        <div class="form-group col-md-4">
                            <label for="inputState">Zona destino</label>
                            <select id="inputState" class="form-control" name="zona">
                                <%for(let zona of zonas) {%>
                                <option value="<%= zona.zonaID %>"><%= zona.nombreZona %></option>
                                <%}%>
                            </select>
                        </div>
                        <div class="form-group col-md-4">
                            <fieldset disabled>
                                <label for="disabledTextInput">Número de ejemplares</label>
                                <input type="text" id="disabledTextInput" class="form-control"
                                    placeholder="0011 - 0061">
                            </fieldset>

                        </div>
                    </div>
                    <div >
                        <button type="submit" class="btn btn-secondary">Cancelar</button>
                        <button type="submit" class="btn btn-primary">Trasladar</button>
                    </div>
                </form>
            </div>
        </div>
        </div>
    </div>
  </div>
</div>

<%- include('includes/footer.ejs') %>